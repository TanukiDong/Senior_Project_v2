<launch>
    <!-- Arguments -->
    <arg name="model" default="homewhere"/>
    <arg name="configuration_basename" default="homewhere.lua"/>

    <!-- Gmapping -->
    <node pkg="gmapping" type="slam_gmapping" name="turtlebot3_slam_gmapping" output="log">
        <param name="base_frame" value="base_link"/>
        <param name="odom_frame" value="odom"/>
        <param name="map_frame" value="map"/>
        <rosparam command="load" file="$(find homewhere)/config/gmapping_params.yaml" />
        
        <!-- âœ… Add this remap -->
        <remap from="scan" to="/scan_flat"/>
    </node>

    <!-- move_base -->
    <node pkg="move_base" type="move_base" name="move_base" output="screen">
        <param  name="base_global_planner" value="global_planner/GlobalPlanner"/>
        <param  name="base_local_planner"  value="dwa_local_planner/DWAPlannerROS"/>

        <!-- 1) shared(costmap_common) -->
        <rosparam file="$(find homewhere)/config/costmap_common_params.yaml"
                ns="global_costmap" command="load"/>
        <rosparam file="$(find homewhere)/config/costmap_common_params.yaml"
                ns="local_costmap"  command="load"/>

        <!-- 2) global only -->
        <rosparam file="$(find homewhere)/config/costmap_global_params.yaml"
                ns="global_costmap" command="load"/>

        <!-- 3) local only -->
        <rosparam file="$(find homewhere)/config/costmap_local_params.yaml"
                ns="local_costmap"  command="load"/>

        <!-- 4) move_base core params -->
        <rosparam file="$(find homewhere)/config/move_base_params.yaml"
                command="load"/>


        <!-- Load planner-specific parameters -->
        <rosparam file="$(find homewhere)/config/global_planner_params.yaml" command="load" />
        <rosparam file="$(find homewhere)/config/local_planner_dwa_params.yaml" command="load" />

        <!-- Load move_base-specific parameters -->
        <rosparam file="$(find homewhere)/config/move_base_params.yaml" command="load" />
    </node>

    <!-- Launch RViz for visualization -->
    <node name="rviz" pkg="rviz" type="rviz" required="true" output="screen"
        args="-d $(find homewhere)/rviz/slam.rviz"/>
</launch>
