<robot name="box_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <!-- <xacro:include filename="$(find homewhere)/urdf/color.xacro" /> -->

  <link name="base_link">
    <visual>
      <geometry>
        <box size="0.5 0.5 0.5" />
      </geometry>
        <material name="orange">
    <color rgba="${255/255} ${108/255} ${10/255} 1.0" />
  </material>
    </visual>
    <collision>
      <geometry>
        <box size="0.5 0.5 0.5" />
      </geometry>
    </collision>
    <inertial>
      <mass value="10" />
      <origin xyz="0 0 0" />
      <inertia ixx="0.1" ixy="0" ixz="0" iyy="0.1" iyz="0" izz="0.1" />
    </inertial>
  </link>

  <!-- Extended Steering Links -->
  <link name="front_left_steering">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.1" />
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1" />
      </material>
    </visual>
  </link>

  <link name="front_right_steering">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.1" />
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1" />
      </material>
    </visual>
  </link>

  <link name="rear_left_steering">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.1" />
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1" />
      </material>
    </visual>
  </link>

  <link name="rear_right_steering">
    <visual>
      <geometry>
        <box size="0.05 0.05 0.1" />
      </geometry>
      <material name="blue">
        <color rgba="0 0 1 1" />
      </material>
    </visual>
  </link>

  <!-- Wheels -->
  <link name="front_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.05" />
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1" />
      </material>
    </visual>
  </link>

  <link name="front_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.05" />
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1" />
      </material>
    </visual>
  </link>

  <link name="rear_left_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.05" />
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1" />
      </material>
    </visual>
  </link>

  <link name="rear_right_wheel">
    <visual>
      <geometry>
        <cylinder length="0.05" radius="0.05" />
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1" />
      </material>
    </visual>
  </link>

  <!-- Steering Joints -->
  <joint name="front_left_steering_joint" type="revolute">
    <parent link="base_link" />
    <child link="front_left_steering" />
    <origin xyz="-0.2 0.2 -0.3" rpy="0 0 0" /> <!-- Centered at edge of base_link -->
    <axis xyz="0 0 1" />
    <limit lower="-0.785" upper="0.785" effort="5.0" velocity="1.0" />
  </joint>

  <joint name="front_right_steering_joint" type="revolute">
    <parent link="base_link" />
    <child link="front_right_steering" />
    <origin xyz="-0.2 -0.2 -0.3" rpy="0 0 0" /> <!-- Centered at edge of base_link -->
    <axis xyz="0 0 1" />
    <limit lower="-0.785" upper="0.785" effort="5.0" velocity="1.0" />
  </joint>

  <joint name="rear_left_steering_joint" type="revolute">
    <parent link="base_link" />
    <child link="rear_left_steering" />
    <origin xyz="0.2 0.2 -0.3" rpy="0 0 0" /> <!-- Centered at edge of base_link -->
    <axis xyz="0 0 1" />
    <limit lower="-0.785" upper="0.785" effort="5.0" velocity="1.0" />
  </joint>

  <joint name="rear_right_steering_joint" type="revolute">
    <parent link="base_link" />
    <child link="rear_right_steering" />
    <origin xyz="0.2 -0.2 -0.3" rpy="0 0 0" /> <!-- Centered at edge of base_link -->
    <axis xyz="0 0 1" />
    <limit lower="-0.785" upper="0.785" effort="5.0" velocity="1.0" />
  </joint>

  <!-- Axle Joints -->
  <joint name="front_left_wheel_joint" type="revolute">
    <parent link="front_left_steering" />
    <child link="front_left_wheel" />
    <origin xyz="0 0 -0.05" rpy="0 1.5708 0" />
    <axis xyz="0 0 1" />
  </joint>

  <joint name="front_right_wheel_joint" type="revolute">
    <parent link="front_right_steering" />
    <child link="front_right_wheel" />
    <origin xyz="0 0 -0.05" rpy="0 1.5708 0" />
    <axis xyz="0 0 1" />
  </joint>

  <joint name="rear_left_wheel_joint" type="revolute">
    <parent link="rear_left_steering" />
    <child link="rear_left_wheel" />
    <origin xyz="0 0 -0.05" rpy="0 1.5708 0" />
    <axis xyz="0 0 1" />
  </joint>

  <joint name="rear_right_wheel_joint" type="revolute">
    <parent link="rear_right_steering" />
    <child link="rear_right_wheel" />
    <origin xyz="0 0 -0.05" rpy="0 1.5708 0" />
    <axis xyz="0 0 1" />
  </joint>
</robot>