<?xml version="1.0"?>
<robot name="box_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:include filename="$(find homewhere)/urdf/color.xacro" />
  <xacro:include filename="$(find homewhere)/urdf/color.gazebo.xacro" />
  <xacro:include filename="$(find homewhere)/urdf/plugin.xacro" />

  <!-- ================== -->
  <!-- 0) Properties      -->
  <!-- ================== -->

  <xacro:property name="base_mass" value="20.0" />
  <xacro:property name="base_size" value="0.5 0.5 0.5" />

  <xacro:property name="steer_mass" value="1.0" />
  <xacro:property name="steer_size" value="0.05 0.05 0.22" />
  <!-- z of steer is 0.1 + radius of wheel -->

  <xacro:property name="wheel_mass" value="4.0" />
  <xacro:property name="wheel_radius" value="0.07" />
  <xacro:property name="wheel_length" value="0.04" />
  

  <!-- ================== -->
  <!-- 1) Base Link       -->
  <!-- ================== -->

  <link name="base_link">
    <visual>
      <geometry>
        <box size="${base_size}" />
      </geometry>
      <material name="orange"/>
    </visual>
    <collision>
      <geometry>
        <box size="${base_size}" />
      </geometry>
    </collision>
    <inertial>
      <mass value="${base_mass}" />
      <origin xyz="0 0 0" />
      <inertia
        ixx="0.833" ixy="0.0" ixz="0.0"
        iyy="0.833" iyz="0.0"
        izz="0.833"/>    
    </inertial>
  </link>

  <!-- ============== -->
  <!-- 2) Wheel       -->
  <!-- ============== -->

  <xacro:macro name="steering_wheel" params="name x y">

      <!-- roll = 1.57 to rotate the wheel upright-->
    <link name="wheel_${name}">
      <visual>
        <geometry>
          <cylinder length="${wheel_length}" radius="${wheel_radius}" />
        </geometry>
        <origin xyz="0 0 0" rpy="1.57 0 0" />
        <material name="grey"/>
      </visual>
      <collision>
        <geometry>
          <cylinder length="${wheel_length}" radius="${wheel_radius}" />
        </geometry>
        <origin xyz="0 0 0" rpy="1.57 0 0" />
      </collision>
      <inertial>
        <mass value="${wheel_mass}" />
        <origin xyz="0 0 0"/>
        <inertia
          ixx="0.0054" ixy="0.0" ixz="0.0"
          iyy="0.0098" iyz="0.0"
          izz="0.0054"/>
      </inertial>
    </link>

    <link name="steer_${name}">
      <visual>
        <geometry>
          <box size="${steer_size}" />
        </geometry>
        <material name="green"/>
      </visual>
      <!-- <collision>
        <geometry>
          <box size="${steer_size}" />
        </geometry>
      </collision> -->
      <!-- <inertial>
        <mass value="${steer_mass}" />
        <origin xyz="0 0 0" />
        <inertia
          ixx="0.0021" ixy="0.0" ixz="0.0"
          iyy="0.0021" iyz="0.0"
          izz="0.0008"/>
      </inertial> -->
      <inertial>
        <mass value="${steer_mass}" />
        <origin xyz="0 0 0" />
        <inertia
          ixx="0" ixy="0" ixz="0"
          iyy="0" iyz="0"
          izz="0"/>
      </inertial>
    </link>

    <!-- z = base_side/2 + d_to_wheel = 0.5/2 + 0.04 -->
    <joint name="steer_${name}_joint" type="revolute">
      <parent link="base_link" />
      <child link="steer_${name}" />
      <origin xyz="${x} ${y} -0.25" rpy="0 0 0" />
      <axis xyz="0 0 1" />
      <limit lower="-0.785" upper="0.785" effort="10.0" velocity="0.1" />
    </joint>

    <!-- z = -wheel_radius so the edge is at the center of the wheel -->
    <joint name="wheel_${name}_joint" type="continuous">
      <parent link="steer_${name}" />
      <child link="wheel_${name}" />
      <origin xyz="0 0 -0.11"/>
      <axis xyz="0 1 0" />
      <!-- <limit lower="-0.785" upper="0.785" effort="10.0" velocity="2.0" /> -->
    </joint>

  </xacro:macro>

  <xacro:steering_wheel name="front_left"   x="0.2"  y="0.2" />
  <xacro:steering_wheel name="front_right"  x="0.2"   y="-0.2" />
  <xacro:steering_wheel name="rear_left"    x="-0.2"  y="0.2" />
  <xacro:steering_wheel name="rear_right"   x="-0.2"   y="-0.2" />

</robot>